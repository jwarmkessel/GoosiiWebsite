extends ../layout
block content
	h1 New Tasks

	form(method='post', action='/tasks')
		fieldset
			legend Add a Task
			div.clearfix
				label Task
				div.input
					input(name='task[task]', class='xlarge')
			div.actions
				input(type='submit', value='Save', class='btn primary')
				button(type='reset', class='btn') Cancel